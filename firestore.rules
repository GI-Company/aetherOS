
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Stripe data - mostly managed by the extension's Cloud Functions
    match /customers/{userId} {
      allow read, write: if isOwner(userId);
    }
    match /products/{productId} {
      allow read: if request.auth != null;
    }
    match /products/{productId}/prices/{priceId} {
       allow read: if request.auth != null;
    }
    match /customers/{userId}/checkout_sessions/{sessionId} {
        allow read, write: if isOwner(userId);
    }

    // Subscriptions are read-only for the client, written by Stripe webhooks (Cloud Function)
    match /users/{userId}/subscriptions/{subscriptionId} {
      allow read, write: if isOwner(userId);
    }

    match /userPreferences/{userId} {
      allow read, write: if isOwner(userId);
    }
    match /userWorkspaces/{userId} {
      allow read, write: if isOwner(userId);
    }
     match /trialUsers/{userId} {
      // Anonymous users can create and read their own trial document
      allow read, create: if request.auth != null && request.auth.uid == userId && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }
    match /messages/{messageId} {
      // Only authenticated users with a verified email can read and create messages.
      allow read, create: if request.auth != null && request.auth.token.email_verified == true;
      // Nobody can update or delete messages to preserve chat history.
      allow update, delete: if false;
    }
    match /userPresence/{userId} {
      // Any authenticated user can see who is online.
      allow read: if request.auth != null;
      // A user can only write to their own presence document.
      // They can only update specific fields to prevent malicious data writing.
      allow write: if isOwner(userId) &&
        request.resource.data.keys().hasOnly(['status', 'lastSeen', 'displayName', 'photoURL', 'focusedApp', 'isTyping']);
    }
  }
}
