
{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture.",
          "format": "uri"
        }
      }
    },
    "customer": {
      "title": "Stripe Customer",
      "description": "Maps a Firebase user to a Stripe Customer ID.",
      "type": "object",
      "properties": {
        "stripeId": {
          "type": "string",
          "description": "The user's Stripe Customer ID."
        },
        "stripeLink": {
          "type": "string",
          "format": "uri",
          "description": "A link to the customer's profile in the Stripe dashboard."
        }
      },
      "required": ["stripeId", "stripeLink"]
    },
    "product": {
      "title": "Stripe Product",
      "description": "Represents a product or subscription plan in Stripe.",
      "type": "object",
      "properties": {
        "active": { "type": "boolean" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "role": { "type": "string", "description": "Corresponds to a tier ID, e.g., 'personal', 'business'." },
        "images": { "type": "array", "items": { "type": "string", "format": "uri" }},
        "metadata": { "type": "object", "properties": {}}
      }
    },
    "price": {
      "title": "Stripe Price",
      "description": "Represents the pricing for a product in Stripe.",
      "type": "object",
      "properties": {
        "active": { "type": "boolean" },
        "currency": { "type": "string" },
        "description": { "type": "string" },
        "unit_amount": { "type": "number" },
        "type": { "type": "string", "enum": ["one_time", "recurring"]},
        "interval": { "type": "string", "enum": ["day", "week", "month", "year"]},
        "interval_count": { "type": "number" },
        "trial_period_days": { "type": "number" },
        "metadata": { "type": "object", "properties": {}}
      }
    },
     "checkoutSession": {
      "title": "Stripe Checkout Session",
      "description": "A session created to collect payment details from a customer.",
      "type": "object",
      "properties": {
        "price": { "type": "string", "description": "The ID of the price object."},
        "success_url": { "type": "string", "format": "uri" },
        "cancel_url": { "type": "string", "format": "uri" },
        "url": { "type": "string", "format": "uri", "description": "The URL to the Stripe-hosted checkout page."},
        "error": { "type": "object", "properties": { "message": { "type": "string" } }}
      }
    },
    "subscription": {
      "title": "Subscription",
      "description": "Defines a user's subscription tier and status.",
      "type": "object",
      "properties": {
        "stripeId": { "type": "string", "description": "The Stripe subscription ID."},
        "status": {
          "type": "string",
          "enum": ["trialing", "active", "past_due", "unpaid", "canceled", "incomplete", "incomplete_expired"],
          "description": "The current status of the subscription from Stripe."
        },
        "metadata": { "type": "object" },
        "cancel_at_period_end": { "type": "boolean"},
        "created": { "type": "string", "format": "date-time"},
        "current_period_start": { "type": "string", "format": "date-time"},
        "current_period_end": { "type": "string", "format": "date-time"},
        "ended_at": { "type": "string", "format": "date-time"},
        "cancel_at": { "type": "string", "format": "date-time"},
        "canceled_at": { "type": "string", "format": "date-time"},
        "trial_start": { "type": "string", "format": "date-time"},
        "trial_end": { "type": "string", "format": "date-time"},
        "items": { "type": "array" },
        "price": { "type": "string", "$ref": "#/entities/price" },
        "product": { "type": "string", "$ref": "#/entities/product" },
        "prices": { "type": "array" },
        "role": { "type": "string", "description": "The role associated with this subscription, e.g., 'personal', 'business'."}
      },
      "required": ["stripeId", "status", "price", "product"]
    },
    "userPreference": {
      "title": "User Preference",
      "description": "Stores user-specific preferences, such as UI theme and security settings.",
      "type": "object",
      "properties": {
        "palette": {
          "type": "object",
          "properties": {
            "primaryColor": {
              "type": "string"
            },
            "secondaryColor": {
              "type": "string"
            },
            "backgroundColor": {
              "type": "string"
            },
            "textColor": {
              "type": "string"
            },
            "accentColor": {
              "type": "string"
            }
          }
        },
        "accent": {
          "type": "object",
          "properties": {
            "accentColor": {
              "type": "string"
            },
            "accentForegroundColor": {
              "type": "string"
            }
          }
        },
        "security": {
          "type": "object",
          "properties": {
            "autoSignOutMinutes": {
              "type": "number",
              "description": "The number of minutes of inactivity before automatically signing out. 0 means disabled."
            }
          },
          "required": ["autoSignOutMinutes"]
        },
        "wallpaperUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's custom desktop wallpaper."
        },
        "tutorials": {
          "type": "object",
          "description": "Stores user preferences for tutorials.",
          "properties": {
            "hideWelcomeTutorial": {
              "type": "boolean",
              "description": "If true, the initial welcome tutorial will not be shown."
            },
            "hiddenAppTutorials": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "A list of app IDs for which the tutorial has been permanently hidden."
            }
          }
        }
      }
    },
    "trialUser": {
      "title": "Trial User",
      "description": "Represents a temporary, anonymous user session.",
      "type": "object",
      "properties": {
        "trialStartedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the trial period started."
        }
      }
    },
    "chatMessage": {
      "title": "Chat Message",
      "description": "Represents a single message in the collaboration chat.",
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "The content of the chat message."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The server timestamp when the message was sent."
        },
        "senderId": {
          "type": "string",
          "description": "The UID of the user who sent the message."
        },
        "senderName": {
          "type": "string",
          "description": "The display name of the sender."
        },
        "senderPhotoURL": {
          "type": "string",
          "format": "uri",
          "description": "The profile picture URL of the sender."
        }
      },
      "required": ["text", "timestamp", "senderId", "senderName"]
    },
    "userWorkspace": {
      "title": "User Workspace",
      "description": "Stores the state of a user's open windows, including their positions and sizes.",
      "type": "object",
      "properties": {
        "windows": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "number" },
              "appId": { "type": "string" },
              "position": {
                "type": "object",
                "properties": {
                  "x": { "type": "number" },
                  "y": { "type": "number" }
                }
              },
              "size": {
                "type": "object",
                "properties": {
                  "width": { "type": "number" },
                  "height": { "type": "number" }
                }
              },
              "zIndex": { "type": "number" },
              "isMinimized": { "type": "boolean" },
              "isMaximized": { "type": "boolean" }
            },
            "required": ["id", "appId", "position", "size", "zIndex"]
          }
        }
      }
    },
    "userPresence": {
      "title": "User Presence",
      "description": "Stores a user's online status and last seen timestamp.",
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["online", "offline"],
          "description": "The user's online status."
        },
        "lastSeen": {
          "type": "string",
          "format": "date-time",
          "description": "The server timestamp of the user's last activity."
        },
        "displayName": {
          "type": "string"
        },
        "photoURL": {
          "type": "string",
          "format": "uri"
        },
        "focusedApp": {
          "type": "string",
          "description": "The ID of the app the user is currently focused on."
        },
        "isTyping": {
          "type": "boolean",
          "description": "Whether the user is currently typing in the chat."
        }
      },
      "required": ["status", "lastSeen"]
    },
    "appWorkflow": {
      "title": "Application Workflow",
      "description": "Defines a series of steps to be executed by the OS.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the workflow."
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "stepName": {
                "type": "string"
              },
              "toolId": {
                "type": "string",
                "description": "The ID of the tool to execute for this step."
              },
              "inputs": {
                "type": "object",
                "properties": {},
                "additionalProperties": true
              }
            },
            "required": ["stepName", "toolId"]
          }
        }
      },
      "required": ["name", "steps"]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "anonymous",
      "phone"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "User profile information."
    },
    "/customers/{userId}": {
        "schema": { "$ref": "#/entities/customer" },
        "description": "Stripe customer information for a Firebase user."
    },
    "/products/{productId}": {
        "schema": { "$ref": "#/entities/product" },
        "description": "Details of a Stripe product, typically a subscription tier."
    },
    "/products/{productId}/prices/{priceId}": {
        "schema": { "$ref": "#/entities/price" },
        "description": "Pricing information for a specific Stripe product."
    },
    "/customers/{userId}/checkout_sessions/{sessionId}": {
        "schema": { "$ref": "#/entities/checkoutSession" },
        "description": "A session created for a user to complete a Stripe payment."
    },
    "/users/{userId}/subscriptions/{subscriptionId}": {
      "schema": {
        "$ref": "#/entities/subscription"
      },
      "description": "User subscription status and tier."
    },
    "/userPreferences/{userId}": {
      "schema": {
        "$ref": "#/entities/userPreference"
      },
      "description": "Stores user-specific preferences, such as UI theme."
    },
    "/userWorkspaces/{userId}": {
      "schema": {
        "$ref": "#/entities/userWorkspace"
      },
      "description": "Stores the user's window layout and state."
    },
    "/trialUsers/{userId}": {
      "schema": {
        "$ref": "#/entities/trialUser"
      },
      "description": "Stores information about an anonymous user's trial session."
    },
    "/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/chatMessage"
      },
      "description": "A collection of all chat messages in the global chat room."
    },
    "/userPresence/{userId}": {
      "schema": {
        "$ref": "#/entities/userPresence"
      },
      "description": "Stores real-time user presence information."
    }
  }
}
