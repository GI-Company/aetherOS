
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /subscriptions/{userId} {
      // Users can read their own subscription status.
      allow read: if request.auth != null && request.auth.uid == userId;
      // A user can create their own subscription document on sign-up.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow users to update their own tier, but not other fields.
      allow update: if request.auth != null && request.auth.uid == userId && request.resource.data.keys().hasOnly(['tier']);
      // Deletes should be handled by a trusted backend process.
      allow delete: if false;
    }
    match /userPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /userWorkspaces/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
     match /trialUsers/{userId} {
      // Anonymous users can create and read their own trial document
      allow read, create: if request.auth != null && request.auth.uid == userId && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }
    match /messages/{messageId} {
      // Only authenticated users with a verified email can read and create messages.
      allow read, create: if request.auth != null && request.auth.token.email_verified == true;
      // Nobody can update or delete messages to preserve chat history.
      allow update, delete: if false;
    }
    match /userPresence/{userId} {
      // Any authenticated user can see who is online.
      allow read: if request.auth != null;
      // A user can only write to their own presence document.
      // They can only update specific fields to prevent malicious data writing.
      allow write: if request.auth != null && request.auth.uid == userId &&
        request.resource.data.keys().hasOnly(['status', 'lastSeen', 'displayName', 'photoURL', 'focusedApp', 'isTyping']);
    }
  }
}
