{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture.",
          "format": "uri"
        }
      }
    },
    "userPreference": {
      "title": "User Preference",
      "description": "Stores user-specific preferences, such as UI theme.",
      "type": "object",
      "properties": {
        "palette": {
          "type": "object",
          "properties": {
            "primaryColor": {
              "type": "string"
            },
            "secondaryColor": {
              "type": "string"
            },
            "backgroundColor": {
              "type": "string"
            },
            "textColor": {
              "type": "string"
            },
            "accentColor": {
              "type": "string"
            }
          }
        },
        "accent": {
          "type": "object",
          "properties": {
            "accentColor": {
              "type": "string"
            },
            "accentForegroundColor": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "User profile information."
    },
    "/userPreferences/{userId}": {
      "schema": {
        "$ref": "#/entities/userPreference"
      },
      "description": "Stores user-specific preferences, such as UI theme."
    }
  }
}
