rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /subscriptions/{userId} {
      // Users can read their own subscription status.
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only a trusted backend process can create, update, or delete subscriptions.
      allow write: if false; 
    }
    match /userPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /userWorkspaces/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
     match /trialUsers/{userId} {
      // Anonymous users can create and read their own trial document
      allow read, create: if request.auth != null && request.auth.uid == userId && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }
    match /messages/{messageId} {
      // Any authenticated user can read and create messages.
      allow read, create: if request.auth != null;
      // Nobody can update or delete messages to preserve chat history.
      allow update, delete: if false;
    }
    match /userPresence/{userId} {
      // Any authenticated user can see who is online.
      allow read: if request.auth != null;
      // A user can only write to their own presence document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
